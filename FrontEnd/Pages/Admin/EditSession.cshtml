@page "{id}"
@model FrontEnd.Pages.Admin.EditSessionModel
@{
    ViewData["Title"] = "EditSession";
}

<h3>EditSession</h3>

@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Session.Id"/>
    <input type="hidden" asp-for="Session.TrackId"/>
    <div class="form-group">
        <label asp-for="Session.Title" class="col-md-2 custom-control-label"></label>
        <div class="col-md-10">
            <input asp-for="Session.Title" class="form-control"/>
            <span asp-validation-for="Session.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Session.Abstract" class="col-md-2 custom-control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Session.Abstract" class="form-control"></textarea>
                <span asp-validation-for="Session.Abstract" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="submit" asp-page-handler="Delete">Delete</button>
            </div>
        </div>
    </div>
</form>

